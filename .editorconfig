# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

##############################################
#      default charset
#    + Unix-style newlines
#    + 4 space indentation
#    + a newline ending every file
##############################################
[*]
end_of_line  = lf
indent_style = space
indent_size  = 4
charset      = utf-8
insert_final_newline = true

# Shellscript
[*.sh]
indent_size = 2

# Markdown files
[*.md]
indent_size = 2

# Yaml files
[*.yml]
indent_size = 2

[*.[co?nf|ini]]
indent_size = 2
